<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".accountfragment.AccountFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="#1C1C1C"
                android:orientation="vertical">
            </ImageView>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/item_avatar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/account_name"
                android:layout_width="80dp"
                android:scaleType="centerCrop"
                android:layout_height="80dp"
                android:background="@drawable/border_search_hotel"
                />
            <TextView
                android:id="@+id/account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@android:color/transparent"
                android:text="Minh Hoang Nhat"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/quan_ly_tai_khoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Quản lý tài khoản"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_baseline_account_circle_24"
            android:gravity="left|center"
            android:drawablePadding="30dp"
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/account_saved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Đã lưu"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/heart_svgrepo_com"
            android:gravity="left|center"
            android:drawablePadding="30dp"
            android:background="@android:color/transparent"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Đánh giá"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/like_tag_svgrepo_com"
            android:gravity="left|center"
            android:drawablePadding="30dp"
            android:textAllCaps="false"
            android:background="@android:color/transparent"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
