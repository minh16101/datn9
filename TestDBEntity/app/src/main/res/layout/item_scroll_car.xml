<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_scroll_car"
    android:layout_width="200dp"
    android:layout_height="230dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="12dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_scroll_car"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/travel_bg"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/location_2_scroll"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            app:layout_constraintLeft_toLeftOf="@+id/img_scroll_car"
            app:layout_constraintBottom_toTopOf="@+id/location_1_scroll"
            android:src="@drawable/location_sign_svgrepo_com"
            />
        <ImageView
            android:id="@+id/location_1_scroll"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            app:layout_constraintLeft_toLeftOf="@+id/img_scroll_car"
            app:layout_constraintBottom_toBottomOf="@+id/img_scroll_car"
            android:src="@drawable/location_current_svgrepo_com"
            />
        <TextView
            android:id="@+id/tv_scroll_location_2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:text="Ha Noi"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/location_2_scroll"
            app:layout_constraintBottom_toTopOf="@+id/tv_scroll_location_1"/>

        <TextView
            android:id="@+id/tv_scroll_location_1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:text="Ha Noi"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/location_1_scroll"
            app:layout_constraintBottom_toBottomOf="@+id/img_scroll_car"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
