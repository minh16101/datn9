<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".homefragment.bookinghotel.DisplayPaymentHotelActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/parent_layout"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/imageView_hotel_payment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hotelnhatrang"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/name_hotel_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Name hotel"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="10">
            <TextView
                android:id="@+id/name_room_payment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="left"
                android:text="Name hotel"
                />
            <TextView
                android:id="@+id/name_room_payment_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="right"
                android:text="Name hotel"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="10">
            <TextView
                android:id="@+id/address_room_payment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="left"
                android:text="Address hotel"
                />
            <TextView
                android:id="@+id/address_room_payment_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="right"
                android:text="Address hotel"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="10">
            <TextView
                android:id="@+id/from_time_room_payment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="left"
                android:text="From hotel"
                />
            <TextView
                android:id="@+id/from_time_room_payment_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="right"
                android:text="From hotel"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="10">
            <TextView
                android:id="@+id/to_time_room_payment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="left"
                android:text="To hotel"
                />
            <TextView
                android:id="@+id/to_time_room_payment_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="right"
                android:text="To hotel"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/garden"
            app:cardMaxElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="10">
                    <TextView
                        android:id="@+id/name_user_room_payment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="left"
                        android:text="Name user"
                        />
                    <TextView
                        android:id="@+id/name_user_room_payment_value"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="right"
                        android:text="Name user"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="10">
                    <TextView
                        android:id="@+id/name_gmail_room_payment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="left"
                        android:text="Name gmail"
                        />
                    <TextView
                        android:id="@+id/name_gmail_room_payment_value"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="right"
                        android:text="Name gmail"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="10">
                    <TextView
                        android:id="@+id/phone_room_payment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="left"
                        android:text="Phone user"
                        />
                    <TextView
                        android:id="@+id/phone_room_payment_value"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="right"
                        android:text="Phone user"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/money_payment_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="35sp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="@color/deliSign4"
            android:text="100.000"/>
        <TextView
            android:id="@+id/money_unit_payment_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="@color/deliSign4"
            android:text="vnd"/>
    </LinearLayout>
    <Button
        android:id="@+id/payment_hotel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal|bottom"
        android:text="Home"/>
</LinearLayout>
